@import url('https://fonts.googleapis.com/css2?family=Open+Sans&family=PT+Sans&display=swap');
body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
    monospace;
}
*{
  font-family: 'Open-sans', sans-serif;
}
/* for styling of navbar components */
.nav-link{
  color: rgb(240, 226, 226) !important;
}
.navbar{
  background-color: rgb(162, 0, 255) !important;
}
.navbar-brand{
  color: white !important;
}
/* for styling of each card in home page where all books are shown */
.img-fluid{
  height: 250px !important;
}
h1{
  font-size: 1em !important;
  text-align: left;
  color: black;
}
/* styling for the description page */
.imgdesc{
  height: 400px !important;
}
p{
  text-align: left !important;
}
.bookdesc{
  text-align: left !important;
}
/* styling the registration and signin form */
.registration{
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.registration .row{
  justify-content: center;
}
.registration .fullform{
  box-shadow: 0 0 35px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  max-width: 440px;
}
.registration .fullform .title{
  margin: 10px 0 50px 0;
}
.registration .fullform .title h3{
  font-weight: bold;
}
.registration .fullform .btn{
  background-color: rgb(162, 0, 255);
  color: #fff;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
  border-radius: 50px;
  cursor: pointer;
  margin-top: 20px;
}
.registration .fullform .btn:hover{
  background-color: rgba(162, 0, 255, 0.801);
}
.registration .form-group input{
  border-radius: 50px;
  outline: none;
  background: #fff;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
  width: 100%;
  padding: 10px 35px 10px 35px;
  margin-bottom: 8px;
}
.registration .form-group{
  position: relative;

}
.registration .form-group i{
  position: absolute;
  top: 10px;
  right: 30px;
}


