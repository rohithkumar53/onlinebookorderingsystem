export const addReviewReducer=(state={}, action)=> {
    const { type}= action;
    switch(type){
        case "ADD_REVIEW_REQUEST":
            return {
                ...state,
                loading: true
            }
        case "ADD_REVIEW_SUCCESS":
            return {
                ...state,
                loading: false,
                success: true
            }
        case "ADD_REVIEW_FAILED":
            return {
                ...state,
                loading: false,
                error: true
            }
        default:
            return state
    }
}